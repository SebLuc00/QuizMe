<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="quizme.quizmee.MainActivity"
    android:background="@drawable/tlo2"
    android:layout_gravity="center"
    android:id="@+id/lin_lay"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150sp"
        android:layout_height="140sp"
        android:layout_marginTop="1sp"
        android:layout_marginBottom="15sp"
        app:srcCompat="@drawable/splash_img" />

    <Button
        android:id="@+id/button"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="120sp"
        android:background="@drawable/nacisniecie"
        android:onClick="game"
        android:text="Nowa gra"
        android:textColor="#ffffff"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:background="@drawable/nacisniecie"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="60dp"
        android:text="O PROGRAMIE"
        android:onClick="conti"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:background="@drawable/nacisniecie"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="120dp"
        android:text="Tabela wyników"
        android:onClick="score"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:background="@drawable/nacisniecie"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="60dp"
        android:text="Opcje"
        android:onClick="options"/>

    <Button
        android:id="@+id/button_zakoncz"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        android:background="@drawable/nacisniecie"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="120dp"
        android:text="Zakończ"
        android:onClick="exit"/>

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">



    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />



</LinearLayout>
